<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="0dp"
    android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal"
    android:orientation="horizontal"
    android:showDividers="middle"
    tools:context="com.jpp.and_thirukkural.PartListActivity">

    <!--
    This layout is a two-pane layout for the Parts
    master/detail flow.
    
    -->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/part_list"
        android:name="com.jpp.and_thirukkural.PartListFragment"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layoutManager="LinearLayoutManager"
        tools:context="com.jpp.and_thirukkural.PartListActivity"
        tools:listitem="@layout/row_part_partlist" />

    <FrameLayout
        android:id="@+id/part_detail_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

</LinearLayout>
