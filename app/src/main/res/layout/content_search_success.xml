<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:id="@+id/content_search_success"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/result_card"
        app:contentPadding="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/search_results"
                android:id="@+id/textView2"
                android:layout_marginBottom="16dp" />

            <TextView
                android:text="@string/sections"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_sections"
                style="@style/Body1" />

            <TextView
                android:text="@string/parts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_parts"
                style="@style/Body1" />

            <TextView
                android:text="@string/chapters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_chapters"
                style="@style/Body1" />

            <TextView
                android:text="@string/couplets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_couplets"
                style="@style/Body1" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_marginTop="4dp" />

</LinearLayout>
