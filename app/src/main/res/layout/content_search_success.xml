<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.jpp.and_thirukkural.SearchResultsActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="5"
        android:padding="8dp"
        android:background="@color/material_grey_100">

        <com.jpp.and_thirukkural.TamilTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/searched_word"
            android:id="@+id/textView2"
            android:layout_row="0"
            android:layout_column="0"
            android:paddingTop="2dp"
            android:paddingBottom="2dp" />

        <com.jpp.and_thirukkural.TamilTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Searched word"
            android:id="@+id/qText"
            android:layout_row="0"
            android:layout_column="1"
            android:paddingLeft="8dp"
            android:singleLine="false"
            android:textStyle="bold"
            android:layout_columnSpan="2"
            android:textColor="@color/colorPrimaryDark" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_rowSpan="4"
            android:gravity="center_vertical|right"
            android:layout_gravity="fill">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton"
                android:src="@drawable/ic_pdf_file_black_24dp"
                style="@android:style/Widget.Material.Button.Borderless.Small" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton2"
                android:src="@drawable/ic_share_black_24dp"
                style="@android:style/Widget.Material.Button.Borderless.Small" />
        </LinearLayout>

        <com.jpp.and_thirukkural.TamilTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/couplets"
            android:id="@+id/textView9"
            android:layout_row="1"
            android:layout_column="0"
            android:paddingTop="2dp"
            android:paddingBottom="2dp" />

        <com.jpp.and_thirukkural.TamilTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="59"
            android:id="@+id/numberOfCouplets"
            android:layout_row="1"
            android:layout_column="1"
            android:paddingLeft="8dp"
            android:singleLine="false"
            android:textStyle="bold" />

        <com.jpp.and_thirukkural.TamilTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textView14"
            android:layout_row="2"
            android:layout_column="0"
            android:text="@string/chapters"
            android:paddingTop="2dp"
            android:paddingBottom="2dp" />

        <com.jpp.and_thirukkural.TamilTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="26"
            android:id="@+id/numberOfChapters"
            android:layout_row="2"
            android:layout_column="1"
            android:paddingLeft="8dp"
            android:singleLine="false"
            android:textStyle="bold" />

        <com.jpp.and_thirukkural.TamilTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/parts"
            android:id="@+id/textView20"
            android:layout_row="3"
            android:layout_column="0"
            android:paddingTop="2dp"
            android:paddingBottom="2dp" />

        <com.jpp.and_thirukkural.TamilTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="1"
            android:id="@+id/numberOfParts"
            android:layout_row="3"
            android:layout_column="1"
            android:paddingLeft="8dp"
            android:singleLine="false"
            android:textStyle="bold" />

        <com.jpp.and_thirukkural.TamilTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/sections"
            android:id="@+id/textView21"
            android:layout_row="4"
            android:layout_column="0"
            android:paddingTop="2dp"
            android:paddingBottom="2dp" />

        <com.jpp.and_thirukkural.TamilTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="1"
            android:id="@+id/numberOfSections"
            android:layout_row="4"
            android:layout_column="1"
            android:paddingLeft="8dp"
            android:singleLine="false"
            android:textStyle="bold" />
    </GridLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listView" />
</LinearLayout>
