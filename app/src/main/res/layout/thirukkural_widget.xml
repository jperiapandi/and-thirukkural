<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/widget_bg_color"
    android:padding="@dimen/widget_margin">

    <TextView
        android:id="@+id/couplet_detail_text"
        style="@style/Widget.Body3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imageButton"
        android:paddingBottom="@dimen/widget_margin_4"
        android:paddingLeft="@dimen/widget_margin_8"
        android:paddingRight="@dimen/widget_margin_4"
        android:paddingTop="@dimen/widget_margin_4"
        android:text="Couplet detail"
        android:textColor="@color/widget_body2" />

    <TextView
        android:id="@+id/couplet_text"
        style="@style/Widget.Body1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="Couplet"
        android:paddingLeft="@dimen/widget_margin_8"
        android:paddingTop="@dimen/widget_margin_8"
        android:lines="2"
        android:text="Sample Text"
        android:textColor="@color/widget_body1"
        android:layout_below="@+id/couplet_detail_text"
        android:layout_toRightOf="@+id/imageButton"/>

    <ImageButton
        android:id="@+id/imageButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="@dimen/widget_strip"
        android:layout_height="match_parent"
        android:background="@color/cardview_light_background"
        android:src="@drawable/ic_refresh_black_24px"
        android:layout_below="@+id/couplet_number"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/couplet_number"
        style="@style/Widget.Body2"
        android:layout_width="@dimen/widget_strip"
        android:layout_height="wrap_content"
        android:lines="2"
        android:padding="2dp"
        android:text="Kural\n1330"
        android:textAlignment="center"
        android:background="@color/cardview_light_background"
        android:textColor="@color/widget_body2" />

</RelativeLayout>