<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:padding="8dp"
        android:background="@color/material_grey_100">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.jpp.and_thirukkural.TamilTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Section name"
                android:id="@+id/section_title"
                style="@style/badge1"
                android:layout_marginRight="@dimen/badge_hspace" />

            <com.jpp.and_thirukkural.TamilTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Part name"
                android:id="@+id/part_title"
                style="@style/badge2"
                android:layout_marginRight="@dimen/badge_hspace" />

            <com.jpp.and_thirukkural.TamilTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Chapter name"
                android:id="@+id/chapter_title"
                style="@style/badge3" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.jpp.and_thirukkural.TamilTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                android:text="1330"
                android:id="@+id/couplet_id"
                android:layout_gravity="center_vertical"
                android:textColor="@color/abc_primary_text_disable_only_material_light" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/favButton"
                    android:src="@drawable/ic_favorite_black_24dp"
                    style="@android:style/Widget.Material.Button.Borderless.Small" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pdfCoupletButton"
                    android:src="@drawable/ic_pdf_file_black_24dp"
                    style="@android:style/Widget.Material.Button.Borderless.Small" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/shareCoupletButton"
                    android:src="@drawable/ic_share_black_24dp"
                    style="@android:style/Widget.Material.Button.Borderless.Small" />
            </LinearLayout>
        </LinearLayout>

        <com.jpp.and_thirukkural.TamilTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:text="Couplet couplet \nCouplet"
            android:id="@+id/couplet_text"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold" />

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/commentaryList"
        android:divider="@null"
        android:clickable="false"
        android:contextClickable="false" />

</LinearLayout>
