<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.thirukuralLauncher" parent="AppTheme">
        <item name="android:windowBackground">@drawable/launcher_bg_screen</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Define all font styles as per Material Design Standards -->
    <style name="TextStyle"></style>

    <style name="TextStyle.Regular">
        <item name="fontPath">fonts/NotoSansTamil-Regular.ttf</item>
    </style>

    <style name="TextStyle.Bold">
        <item name="fontPath">fonts/NotoSansTamil-Bold.ttf</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Headline" parent="TextStyle.Regular">
        <item name="android:textSize">24sp</item>
        <item name="android:color">@color/black_87</item>
    </style>

    <style name="Title" parent="TextStyle.Bold">
        <item name="android:textSize">21sp</item>
        <item name="android:color">@color/black_87</item>
    </style>

    <style name="Subheading" parent="TextStyle.Regular">
        <item name="android:textSize">17sp</item>
        <item name="android:color">@color/black_87</item>
    </style>

    <style name="Body2" parent="TextStyle.Bold">
        <item name="android:textSize">15sp</item>
        <item name="android:color">@color/black_87</item>
    </style>

    <style name="Body1" parent="TextStyle.Regular">
        <item name="android:textSize">15sp</item>
        <item name="android:color">@color/black_87</item>
    </style>

    <style name="Body3" parent="TextStyle.Regular">
        <item name="android:textSize">14sp</item>
        <item name="android:color">@color/black_87</item>
    </style>

    <style name="Widget.Body1" parent="TextStyle.Regular">
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Widget.Body2" parent="TextStyle.Regular">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black_87</item>
    </style>
    <style name="Widget.Body3" parent="TextStyle.Regular">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black_87</item>
    </style>

    <style name="Button" parent="TextStyle.Bold">
        <item name="android:textSize">15sp</item>
        <item name="android:color">@color/black_87</item>
    </style>


    <style name="Caption2" parent="TextStyle.Bold">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Caption1" parent="TextStyle.Regular">
        <item name="android:textSize">13sp</item>
    </style>


    <style name="Small" parent="TextStyle.Regular">
        <item name="android:textSize">11sp</item>
        <item name="android:color">@android:color/black</item>
    </style>

    <style name="VerySmall" parent="TextStyle.Regular">
        <item name="android:textSize">10sp</item>
        <item name="android:color">@android:color/black</item>
    </style>

    <style name="TabbarTextStyle" parent="TextStyle.Regular">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Badge" parent="Small"></style>

    <style name="badge1" parent="Badge">
        <!--<item name="android:background">@drawable/badge1_bg</item>-->
        <item name="android:color">@color/badge_color1</item>
    </style>

    <style name="badge2" parent="Badge">
        <!--<item name="android:background">@drawable/badge2_bg</item>-->
        <item name="android:color">@color/badge_color2</item>
    </style>

    <style name="badge3" parent="Badge">
        <!--<item name="android:background">@drawable/badge3_bg</item>-->
        <item name="android:color">@color/badge_color3</item>
    </style>

    <style name="badge4" parent="Badge">
        <item name="android:color">@color/badge_color4</item>
    </style>

    <style name="input_field">
        <item name="android:background">@drawable/input_text_bg</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="Commentary"></style>
    <style name="Commentary.Title" parent="TextStyle.Bold">
        <item name="android:padding">15dp</item>
    </style>
    <style name="Commentary.content" parent="TextStyle.Regular">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="Couplet" parent="TextStyle.Bold">
        <item name="android:background">@drawable/couplet_text_bg</item>
        <item name="android:color">@color/black_87</item>
        <item name="android:paddingBottom" >16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

</resources>
