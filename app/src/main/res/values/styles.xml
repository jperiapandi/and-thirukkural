<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- <item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item> -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Widget"/>
    
    <style name="AppTheme.Widget.TextView" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/NotoSansTamil-Regular.ttf</item>
    </style>

    <style name="TabbarTextStyle">
        <item name="fontPath">fonts/NotoSansTamil-Regular.ttf</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="commentaryByTextStyle">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#7b000000</item>
        <item name="android:textStyle">bold</item>
        <item name="fontPath">fonts/NotoSansTamil-Bold.ttf</item>
    </style>

    <style name="badge1">
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/rounded_corner</item>
    </style>

    <style name="badge2">
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/rounded_corner</item>
    </style>

    <style name="badge3">
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/rounded_corner</item>
    </style>

    <style name="badge4">
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/rounded_corner</item>
    </style>

</resources>
