<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jpp.and_thirukkural">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ChapterActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AboutThirukkuralActivity"
            android:label="@string/about_thirukkural"
            android:parentActivityName=".ChapterActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jpp.and_thirukkural.ChapterActivity" />
        </activity>
        <activity
            android:name=".SectionsActivity"
            android:label="@string/book_index"
            android:parentActivityName=".ChapterActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ChapterActivity" />
        </activity>
        <activity
            android:name=".SearchResultsActivity"
            android:label="@string/search_results"
            android:parentActivityName=".ChapterActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jpp.and_thirukkural.ChapterActivity" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <provider
            android:name=".provider.ThirukkuralContentProvider"
            android:authorities="com.jpp.and_thirukkural"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".FavoritesActivity"
            android:label="@string/fav_couplets"
            android:parentActivityName=".ChapterActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jpp.and_thirukkural.ChapterActivity" />
        </activity>

        <activity
            android:name=".SettingsActivity"
            android:label="@string/settings"
            android:parentActivityName=".ChapterActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jpp.and_thirukkural.ChapterActivity" />
        </activity>
    </application>

</manifest>